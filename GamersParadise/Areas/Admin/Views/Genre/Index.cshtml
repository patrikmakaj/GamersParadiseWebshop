@{
    ViewData["Title"] = "Genres";
}
@model List<Genre>


<div class="container">
    <div class="row pt-4">
        <div class="col-8">
            <h2 class="text-primary">
                Genre list
            </h2>
        </div>
        <div class="col-4 text-end">
            <a asp-controller="Genre" asp-action="Upsert" class="btn btn-secondary">
                <i class="bi bi-plus-circle"></i> Create New Genre
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Genre Name
        </th>
        <th>
            Display Order
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var genre in Model)
    {
        <tr>
            <td>
                @genre.Name
            </td>
            <td>
                @genre.DisplayOrder
            </td>
            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Genre" asp-action="Upsert" asp-route-gameId="@genre.Id" class="btn btn-outline-secondary">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-controller="Genre" asp-action="Delete" asp-route-gameId="@genre.Id" class="btn btn-outline-danger">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>