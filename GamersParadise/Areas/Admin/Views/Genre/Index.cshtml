@{
    ViewData["Title"] = "Genres";
}
@model List<Genre>


<div class="container">
    <div class="row pt-4">
        <div class="col-8">
            <h2 class="text-primary">
                Genre list
            </h2>
        </div>
        <div class="col-4 text-end">
            <a asp-controller="Genre" asp-action="Upsert" class="btn btn-secondary">
                <i class="bi bi-plus-circle"></i> Create New Genre
            </a>
        </div>
    </div>
</div>

<table id="tblDataGenre" class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Genre Name
        </th>
        <th>
            Display Order
        </th>
        <th>

        </th>
    </tr>
    </thead>
    @* <tbody>

    </tbody> *@
</table>

@section Scripts {
    @{
        <script src="~/js/genre.js"></script>
    }
}